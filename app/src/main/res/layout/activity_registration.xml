<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Registration"
    android:clickable="false"
    android:background="#ffffd15c">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Browse"
        android:id="@+id/button"
        android:layout_below="@+id/button2"
        android:layout_toRightOf="@+id/phonenumbertxt" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload"
        android:id="@+id/button2"
        android:layout_below="@+id/registrationtxt"
        android:layout_toRightOf="@+id/phonenumbertxt"
        android:layout_toEndOf="@+id/phonenumbertxt" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/icon_round_question_mark"
        android:layout_below="@+id/registrationtxt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/button"
        android:layout_toStartOf="@+id/edpasstxt"
        android:layout_toLeftOf="@+id/edpasstxt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Password:"
        android:id="@+id/passwordtxt"
        android:textSize="30dp"
        android:textIsSelectable="false"
        android:textColor="#ff4b1eff"
        android:layout_below="@+id/nametxt"
        android:layout_alignLeft="@+id/nametxt"
        android:layout_alignStart="@+id/nametxt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Registration"
        android:id="@+id/registrationtxt"
        android:textColor="#ff4b1eff"
        android:textSize="50dp"
        android:typeface="normal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Name:"
        android:id="@+id/nametxt"
        android:textSize="30dp"
        android:textIsSelectable="false"
        android:textColor="#ff4b1eff"
        android:layout_below="@+id/imageView"
        android:layout_alignRight="@+id/emailtxt"
        android:layout_alignEnd="@+id/emailtxt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="E-Mail:"
        android:id="@+id/emailtxt"
        android:textSize="30dp"
        android:textIsSelectable="false"
        android:textColor="#ff4b1eff"
        android:layout_below="@+id/phonenumbertxt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Phone Number:"
        android:id="@+id/phonenumbertxt"
        android:textSize="30dp"
        android:textIsSelectable="false"
        android:textColor="#ff4b1eff"
        android:textAlignment="gravity"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Retype Password:"
        android:id="@+id/textView"
        android:textSize="30dp"
        android:textIsSelectable="false"
        android:textColor="#ff4b1eff"
        android:textAlignment="gravity"
        android:layout_below="@+id/passwordtxt"
        android:layout_alignLeft="@+id/passwordtxt"
        android:layout_alignStart="@+id/passwordtxt" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/ednametxt"
        android:textSize="20dp"
        android:background="#fffaf2ff"
        android:layout_below="@+id/button"
        android:layout_alignBottom="@+id/nametxt"
        android:layout_toRightOf="@+id/nametxt"
        android:layout_toLeftOf="@+id/button"
        android:layout_toStartOf="@+id/button" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Password"
        android:ems="10"
        android:id="@+id/edpasstxt"
        android:textSize="20dp"
        android:background="#fffaf2ff"
        android:layout_toRightOf="@+id/passwordtxt"
        android:layout_below="@+id/ednametxt"
        android:layout_alignBottom="@+id/passwordtxt"
        android:layout_toLeftOf="@+id/editText"
        android:layout_toStartOf="@+id/editText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Password"
        android:ems="10"
        android:id="@+id/editText"
        android:textSize="20dp"
        android:background="#fffaf2ff"
        android:layout_above="@+id/phonenumbertxt"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_below="@+id/edpasstxt" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="phone"
        android:ems="10"
        android:id="@+id/edphonetxt"
        android:textSize="20dp"
        android:background="#fffaf2ff"
        android:layout_alignBottom="@+id/phonenumbertxt"
        android:layout_toRightOf="@+id/phonenumbertxt"
        android:layout_alignTop="@+id/phonenumbertxt"
        android:layout_alignRight="@+id/registrationtxt"
        android:layout_alignEnd="@+id/registrationtxt" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Email"
        android:ems="10"
        android:id="@+id/edemailtxt"
        android:textSize="20dp"
        android:background="#fffaf2ff"
        android:layout_alignBottom="@+id/emailtxt"
        android:layout_toRightOf="@+id/emailtxt"
        android:layout_below="@+id/phonenumbertxt"
        android:layout_toLeftOf="@+id/edphonetxt"
        android:layout_toStartOf="@+id/edphonetxt" />

</RelativeLayout>
